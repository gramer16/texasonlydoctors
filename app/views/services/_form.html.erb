    <div id="error_explanation">
      <h2><%= pluralize(@service.errors.count, "error") %> prohibited this service from being saved:</h2>

      <ul>
      <% @service.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

<div class="thumbnail">
  <div class="row">
    <div class="col-md-4">
      <%= f.label :service_type %><br>
      <%= f.select :service_type, options_for_select([["Any option", "Any option"], ["Appliance Sale","Appliance Sale"], ["Appliance Repair","Appliance Repair"], ["Builders","Builders"], ["Building Material","Building Material"], ["Cement and Concrete","Cement and Concrete"], ["Cleaning Services","Cleaning Services"], ["Cleaning Removal","Cleaning Removal"], ["Electricians","Electricians"], ["Engineers","Engineers"], ["Foundations","Foundations"], ["Fireplace","Fireplace"], ["Lighthing Fictures","Lighthing Fictures"], ["Solar Energy","Solar Energy"], ["Senior Equipment","Senior Equipment"], ["Remodel Specialist","Remodel Specialist"], ["Weather Proofing","Weather Proofing"], ["Decks and Fences","Decks and Fences"] , ["Spa Pools Sales","Spa Pools Sales"], ["Home Theather","Home Theather"], ["Private Assesstment Firms","Private Assesstment Firms"], ["Siding and Stucco","Siding and Stucco"]]), class: "form-control" %><br>
    </div>
    <div class="col-md-4">
      <%= f.label :company_name %><br>
      <%= f.text_field :company_name, class: "form-control"  %><br>
    </div>
    
    <div class="col-md-4">
      <%= f.label :company_description %><br>
      <%= f.text_area :company_description, class: "form-control"  %><br>
    </div>
    <div class="col-md-4">
      <%= f.label :address %><br>
      <%= f.text_area :address, class: "form-control"  %><br>
    </div>
    <div class="col-md-4">
      <%= f.label :city %><br>
      <%= f.text_field :city, class: "form-control"  %><br>
