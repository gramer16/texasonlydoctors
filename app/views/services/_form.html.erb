    <div class="col-md-4">
      <%= f.label :zipcode %><br>
      <%= f.text_field :zipcode, class: "form-control"  %><br>
    </div>
    <div class="col-md-4">
       <%= f.label :contact_name %><br>
       <%= f.text_field :contact_name, class: "form-control"  %><br>
    </div>
    <div class="col-md-4">
      <%= f.label :company_website %><br>
      <%= f.text_field :company_website, class: "form-control"  %><br>
    </div>
    <div class="col-md-4">
      <%= f.label :company_phone %><br>
      <%= f.text_field :company_phone, class: "form-control"  %><br>
    </div>
    <div class="col-md-4">
    <%= f.label :pictures %>  <%= f.file_field :image, class: "form-control" %><br><br>
    </div>
  
  
